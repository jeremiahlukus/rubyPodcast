<div id="podcast_show">
  <div id="show_banner">
    <h1><%= @podcast.title%></h1>
    <p class="description"><%= @podcast.description %></p>
    <% unless @podcast.itunes.blank? %>
      <a href="<%= @podcast.itunes%>" class="subscribe_link"></a>
    <% end %>
    <% unless @podcast.stitcher.blank? %>
      <a href="<%= @podcast.stitcher%>" class="subscribe_link"></a>
    <% end %>
    <% unless @podcast.podbay.blank? %>
      <a href="<%= @podcast.podbay%>" class="subscribe_link"></a>
    <% end %>
  </div>
</div>

<div id="breadcrumb">
  <%= link_to podcasts_path do%>
    All Podcasts
  <span></span>
  The rocket ship Podcast
</div>
<% end %>
